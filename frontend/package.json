    "owasp-password-strength-test": "^1.3.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.52.1",
    "tailwind-merge": "^2.4.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.9.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
